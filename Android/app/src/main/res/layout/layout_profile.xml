<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/profile_editButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_centerHorizontal="true"
                android:text="@string/profile_edit_profile"
                android:background="@color/colorAccent"/>

            <ImageButton
                android:id="@+id/profile_posterAvatar"
                android:layout_below="@+id/profile_editButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@null"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/post_posterAvatar"
                android:scaleType="fitXY"
                android:src="@drawable/ic_avatar_default" />

            <TextView
                android:id="@+id/profile_posterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/profile_posterAvatar"
                android:text="@string/post_posterName"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <RatingBar
                android:id="@+id/profile_rating"
                android:layout_below="@+id/profile_posterName"
                android:layout_marginTop="80dp"
                android:layout_toEndOf="@id/profile_posterAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:isIndicator="true"
                android:rating="3"
                android:numStars="5"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/your_posts"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <include layout="@layout/main_post" />

        <include layout="@layout/main_post" />

        <include layout="@layout/main_post" />

        <include layout="@layout/main_post" />

        <include layout="@layout/main_post" />

        <include layout="@layout/main_post" />

        <include layout="@layout/main_post" />

        <include layout="@layout/main_post" />

        <include layout="@layout/main_post" />

        <include layout="@layout/main_post" />
    </LinearLayout>

</ScrollView>