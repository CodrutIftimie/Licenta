<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <ImageButton
        android:id="@+id/messagerecv_senderAvatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:background="@null"
        android:contentDescription="@string/post_posterAvatar"
        android:scaleType="fitXY"
        android:src="@drawable/ic_avatar_default" />

    <TextView
        android:id="@+id/messagerecv_senderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="100dp"
        android:textSize="16sp"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:paddingBottom="5sp"
        android:textIsSelectable="true"
        android:autoLink="email|phone|web"
        android:paddingTop="5sp"
        android:background="@drawable/message_received_borders"
        android:layout_toEndOf="@+id/messagerecv_senderAvatar"
        android:textColor="#FFFFFF" />

</RelativeLayout>