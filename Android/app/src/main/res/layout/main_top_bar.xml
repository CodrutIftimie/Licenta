<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground">

    <ImageButton
        android:id="@+id/main_logo"
        android:layout_height="40dp"
        android:paddingTop="2.5dp"
        android:paddingBottom="2.5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="200dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:contentDescription="@string/main_logoDescription"
        android:src="@drawable/logo_big_fit" />

    <ImageButton
        android:id="@+id/main_messages"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_main_messages"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:scaleType="fitCenter"
        android:background="@null"
        android:contentDescription="@string/main_messagesDescription"/>

</RelativeLayout>